{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-lib",
    ":preserveSemverRanges",
    ":disableDependencyDashboard"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "dmn-js.*",
        "table-js"
      ],
      "groupName": "dmn-js dependencies",
      "groupSlug": "dmn-js"
    },
    {
      "matchPackagePatterns": [
        "form-js.*",
        "@bpmn-io/form-js.*"
      ],
      "groupName": "form-js dependencies",
      "groupSlug": "form-js"
    },
    {
      "matchPackagePatterns": [
        "eslint.*"
      ],
      "groupName": "eslint* dependencies",
      "groupSlug": "eslint"
    },
    {
      "matchPackagePatterns": [
        "karma.*",
        "puppeteer"
      ],
      "groupName": "karma* dependencies",
      "groupSlug": "karma"
    },
    {
      "matchPackagePatterns": [
        "webpack",
        ".*-loader"
      ],
      "groupName": "webpack* dependencies",
      "groupSlug": "webpack"
    },
    {
      "matchPackagePatterns": [
        "mocha",
        "chai",
        "sinon",
        "sinon-chai"
      ],
      "groupName": "test dependencies",
      "groupSlug": "test"
    },
    {
      "matchPackagePatterns": [
        "@rollup/.*",
        "rollup.*"
      ],
      "groupName": "rollup* dependencies",
      "groupSlug": "rollup"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "bump", "pin"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/bpmn-io/",
        "https://github.com/zeebe-io/",
        "https://github.com/camunda/"
      ],
      "matchUpdateTypes": ["minor", "patch", "bump", "pin", "major"],
      "schedule": "at any time",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": [
        ".*"
      ],
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "peerDependencies"
      ],
      "semanticCommitType": "deps"
    }
  ],
  "semanticCommitScope": null,
  "schedule": ["before 2am on monday"]
}
